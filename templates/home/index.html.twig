{% extends 'base.html.twig' %}

{% form_theme argonauteForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <!-- Header section -->
    <header>
        <h1>
            <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png"
                 alt="Wild Code School logo"/>
            Les Argonautes
        </h1>
    </header>

    <!-- Main section -->
    <main>

        <!-- New member form -->
        <h2 class="my-5">Ajouter un(e) Argonaute</h2>

        {{ form_start(argonauteForm) }}
        {{ form_row(argonauteForm) }}
        <div class="d-flex justify-content-end my-3">
            <button class="btn btn-primary" type="submit">Enregistrer l'argonaute</button>
        </div>
        {{ form_end(argonauteForm) }}

        <!-- Member list -->
        <h2 class="my-5">Membres de l'équipage</h2>

        <section class="member-list row">
        {% for argonaute in argonautes %}
            <div class="col-4">{{ argonaute.name }}</div>
        {% endfor %}
        </section>
    </main>

    <footer>
        <p>Réalisé par Jason en Anthestérion de l'an 515 avant JC</p>
    </footer>
{% endblock %}
